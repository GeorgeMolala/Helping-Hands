                        </div>

                        <br />

                        <div>
                            <label for="@pat.EmailAddress">Email</label>
                            <input asp-for="@pat.EmailAddress" class="form-control" type="email" />
                        </div>

                        <br />

                        <div>
                            <label for="@pat.LineAddress1">Address Line 1</label>
