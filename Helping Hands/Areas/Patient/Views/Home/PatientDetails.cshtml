        </div>


        @*//Modal Pop up for updating Next Of Kin *@
        <div class="modal fade" id="UpdateNextOfKin" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
