                        <br />
                        <div hidden="hidden">
                            <label for="@pat.CityID">City</label>
                            <select asp-for="@pat.CityID" class="form-control">
                                <option value="">Select City</option>
                                @foreach (Helping_Hands.Cities city in Model.Cities)
                                {
                                    <option value="@city.CityID">@city.Name</option>
                                }
                            </select>
